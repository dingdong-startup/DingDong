<%= render 'layouts/navbar' %>

<section class="p-0 bg-light">
  <div class="image image-overlay image-cover" style="background-image:url(<%=asset_path 'tenant.png' %>);""
  data-top-top="transform: translateY(0px);" 
  data-top-bottom="transform: translateY(-250px);"></div>
  <div class="container">
    <div class="row justify-content-center align-items-end vh-40 mb-5">
      <div class="col col-md-10 col-lg-8">
        <div class="row align-items-center">
          <div class="col-4 col-lg-3">
            <img class="mr-3 avatar avatar-xl rounded" src="<%=asset_path(image_path(main_app.url_for(@tenant.avatar)))%>"" />
          </div>
          <div class="col">
            <div class="row align-items-center">
              <div class="col-md-8">
                <h2 class="mb-0"><b><%= @tenant.first_name %></b> <%= @tenant.last_name %></h2>
                <span class="text-muted"><%= @tenant.email %></span>
                <p><%= link_to('Se deconnecter', destroy_tenant_session_path, :method => :delete, class: "text-orange") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<section class="bg-light pt-2">

  <div class="container">
    <div class="tab-content" id="demo-2">

      <!-- tab info -->
      <div class="tab-pane show active" id="demo-2-1" role="tabpanel" aria-labelledby="demo-2-1">
        <div class="row justify-content-center">
          <div class="col-md-10 col-lg-8">

            <!-- stats -->
            <div class="row gutter-1 mb-2">

              <div class="col-6 col-md-4 col-lg-3">
               <%= link_to tenant_favorites_path(@tenant.id) do %>
               <div class="equal">
                <div class="boxed">
                  <div class="row text-primary ml-2 mt-2">
                    <b class="h2"><%= @fav_properties.size%> <i class="fas fa-heart "></i></b>
                  </div>
                  <div class="row equal-header ml-2 mb-2 mt-7">
                    <span class="text-muted">Apparts en favoris</span>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
            <div class="col-6 col-md-4 col-lg-3">
              <%= link_to tenant_properties_path(@tenant.id) do %>
              <div class="equal">
                <div class="boxed ">
                  <div class="row text-primary ml-2 mt-2">
                    <b class="h2"><%= @visit_properties.size %> <i class="fas fa-calendar-check text-primary"></i></b>
                  </div>
                  <div class="row equal-header ml-2 mb-2 mt-7">
                    <span class="text-muted">Visites demandées</span>
                  </div>
                </div>
              </div>
              <% end%>
            </div>
            <div class="col-6 col-md-4 col-lg-3">
              <div class="equal">
                <div class="boxed">
                  <div class="row text-primary ml-2 mt-2">
                    <b class="h2">0 <i class="fas fa-file-upload"></i></b>
                  </div>
                  <div class="row equal-header ml-2 mb-2 mt-7">
                    <span><%= link_to('Remplir mon dossier déclaratif', "https://dingdong-inscription.typeform.com/to/mMksFc?first_name=#{@tenant.first_name}&last_name=#{@tenant.last_name}&email=#{@tenant.email}", target: "_blank", class: "text-muted") %></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6 col-md-4 col-lg-3">
              <div class="equal">
                <div class="boxed">
                  <div class="row text-primary ml-2 mt-2">
                    <b class="h2"><%= @tenant.successful_rent.size %> <i class="fas fa-check-circle text-primary"></i></b>
                  </div>
                  <div class="row equal-header ml-2 mb-2 mt-7">
                    <span class="text-muted">Biens loués</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- / stats -->

          <!-- EDIT INFOS -->
          <div class="row">
            <div class="col">
              <h3 class="mb-2 mt-2">Mes informations</h3>
              <%= form_for [@tenant], action: :update do |f| %>
              <div class="form-row">
                <div class="col">
                  <div class="form-group">
                    <label for="firstName">Prénom</label>
                    <%= f.text_field :first_name, class:'form-control' %>
                  </div>
                </div>
                <div class="col">
                  <div class="form-group">
                    <label for="secondName">Nom</label>
                    <%= f.text_field :last_name, class:'form-control' %>
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="col">
                  <div class="form-group">
                    <label for="userMail">Email</label>
                    <%= f.email_field :email, class:'form-control' %> 
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="col">
                  <div class="form-group">
                    <label for="userDocuments">Mon dossier</label>
                    <%= f.text_field :documents, class:'form-control' %> 
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="col">
                  <div class="form-group">
                    <label>Changer de photo de profil</label> <br>
                    <%= f.file_field :avatar, class:'inputfile' , id: 'avatar'%>
                    <label for="avatar" class="btn btn-secondary btn-sm">Selectionner une nouvelle photo</label>
                  </div>
                </div>
              </div>



              <div class="form-row mt-1 align-items-center">
                <div class="col-3">
                  <%= submit_tag("Enregistrer", id: "button", class: "btn btn-primary", name: "submit") %>
                </div>
              </div>
              <% end %>
              <br>
            </div>
          </div>
          <div class="row pl-2">
            <%= link_to "Modifier les informations de connexion ou supprimer mon compte", edit_tenant_registration_path, class: 'text-primary' %>
          </div>

        </div>
      </div>
    </div>
    <!-- / tab -->



  </div>
</div>
</section>

<%= render 'layouts/footer' %>

